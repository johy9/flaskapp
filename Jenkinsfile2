pipeline {
  agent any

  tools {
    git 'default'
  }

  stages {
    stage('Checkout SCM') {
      steps {
        git branch: 'main', credentialsId: 'git2', url: 'https://github.com/johy9/flaskapp.git'
      }
    }

    stage('Test') {
      steps {
        sh 'python tests.py'
      }
    }

    stage('Build') {
      steps {
        sh 'echo "Building application..."'
      }
    }

    stage('Deploy') {
      steps {
        ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible-project', inventory: 'host.ini', playbook: 'deploy.yml'
      }
    }
  }
}
