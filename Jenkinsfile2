pipeline {
  agent any

  stages {
    stage('Checkout SCM') {
      steps {
        git branch: 'main', url: 'https://github.com/johy9/flaskapp.git' 
      }
    }
    
    stage('Install Dependencies') {
      steps {
        sh ' virtualenv joy'
        sh '. /var/lib/jenkins/workspace/Ansible-Project/joy/bin/activate && install python3-pip'
        sh '. /var/lib/jenkins/workspace/Ansible-Project/joy/bin/activate && pip3 install'
      }
    }
    
    stage('Test') {
      steps {
        sh 'pip install pytest'
        sh 'python tests.py'
      }
    }

    stage('Build') {
      steps {
        sh 'echo "Building application..."'
      }
    }

    stage('Deploy') {
      steps {
        ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible-project', inventory: 'host.ini', playbook: 'deploy.yml'
      }
    }
  }
}
